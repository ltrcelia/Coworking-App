# Configuration Docker pour CoworkSpace
# Copiez ce fichier en .env et adaptez les valeurs

# =============================================================================
# ENVIRONNEMENT
# =============================================================================
NODE_ENV=production
COMPOSE_PROJECT_NAME=coworkspace

# =============================================================================
# PORTS DES SERVICES
# =============================================================================
BACKEND_PORT=3000
FRONTEND_PORT=3001
DB_PORT=27017
ADMINER_PORT=8080

# =============================================================================
# BASE DE DONNÉES MONGODB
# =============================================================================
DB_USERNAME=admin
DB_PASSWORD=your-secure-database-password-change-me
DB_NAME=coworkspace

# =============================================================================
# AUTHENTIFICATION JWT
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=10

# =============================================================================
# CORS ET FRONTEND
# =============================================================================
CORS_ORIGIN=http://localhost:3001
API_URL=http://localhost:3000/api

# =============================================================================
# UPLOADS ET STOCKAGE
# =============================================================================
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# =============================================================================
# LOGS ET MONITORING
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# SÉCURITÉ
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DOCKER SPÉCIFIQUE
# =============================================================================
NETWORK_NAME=coworkspace-network
VOLUME_PREFIX=coworkspace

# =============================================================================
# DÉVELOPPEMENT UNIQUEMENT
# =============================================================================
ENABLE_API_DOCS=true
ENABLE_METRICS=true
DEBUG=coworkspace:*
CHOKIDAR_USEPOLLING=true
